= form_for(@blog) do |f|
  - if @blog.errors.any?
    %div#error_explanation
      %h2 #{pluralize(@blog.errors.count, "error")} prohibited this blog being saved:
      %ul
        - @blog.errors.full_messages.each do |message|
          %li= message

  %div.field
    = f.label :title
    %br>
    = f.text_field :title
  %div.actions
    = f.submit 'Save'
